@model ToyStore.Domain.Entities.Toy

<h1>Excluir brinquedo</h1>

<style>
    h1 {
        font-size: 2em;
        color: #333;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1em;
        margin-bottom: 10px;
    }

    button {
        padding: 10px 20px;
        background-color: #f44336;
        color: white;
        border: none;
        border-radius: 5px;
        font-size: 1em;
        cursor: pointer;
        transition: background-color 0.3s;
    }

        button:hover {
            background-color: #d32f2f;
        }

    a {
        display: inline-block;
        padding: 10px 15px;
        color: #1e90ff;
        text-decoration: none;
        border-radius: 5px;
        transition: color 0.3s;
    }

        a:hover {
            color: #ff4500;
        }

</style>

<p>Você tem certeza que quer excluir esse brinquedo?</p>

<p>Name: @Model.Name</p>
<p>Type: @Model.Type</p>
<p>Price: @Model.Price</p>

<form asp-action="DeleteConfirmed" method="post">
    <input type="hidden" name="Id" value="@Model.Id" />
    <button type="submit">Excluir</button>
</form>

<a href="@Url.Action("Index")">Voltar a lista de brinquedos</a>
