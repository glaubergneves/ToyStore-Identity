@model ToyStore.Domain.Entities.Store

<h1>Detalhes da loja</h1>

<style>
    h1 {
        font-size: 2em;
        color: #333;
        margin-bottom: 20px;
    }

    p {
        font-size: 1.1em;
        margin-bottom: 10px;
    }

    a {
        display: inline-block;
        padding: 10px 15px;
        color: #fff;
        text-decoration: none;
        border-radius: 5px;
        transition: color 0.3s;
    }

        a:hover {
            color: #ff4500;
        }

    .edit-link {
        background-color: #FFC107;
    }

    .back-link {
        background-color: #4CAF50;
    }

</style>

<p><strong>Id: </strong>@Model.Id</p>
<p><strong>Nome: </strong>@Model.Name</p>

<a class="edit-link" href="@Url.Action("Edit", new { id = Model.Id })">Editar a loja</a>
<a class="back-link" href="@Url.Action("Index")">Voltar a lista de lojas</a>
